// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "package",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "source": "webpack-ts-checker",
        "applyTo": "allDocuments",
        "pattern": [
          {
            "regexp": "(ERROR|WARNING) in (.*?):(\\d+):(\\d+)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ]
      },
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "watch",
      "dependsOn": [
        "install_task"
      ],
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "source": "webpack-ts-checker",
        "applyTo": "allDocuments",
        "pattern": [
          {
            "regexp": "(ERROR|WARNING) in (.*?):(\\d+):(\\d+)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^Type-checking in progress|[Cc]ompiled (?:.*?successfully|with .*?(?:error|warning))"
          },
          "endsPattern": {
            "regexp": "^Found \\d+ (?:error|warning)|^No errors found"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "npm",
      "script": "watch-release",
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "source": "webpack-ts-checker",
        "applyTo": "allDocuments",
        "pattern": [
          {
            "regexp": "(ERROR|WARNING) in (.*?):(\\d+):(\\d+)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^Type-checking in progress|[Cc]ompiled (?:.*?successfully|with .*?(?:error|warning))"
          },
          "endsPattern": {
            "regexp": "^Found \\d+ (?:error|warning)|^No errors found"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true,
        "panel": "dedicated"
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "build",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "label": "install_task",
      "type": "npm",
      "script": "install",
      "group": "build",
      "problemMatcher": [ ],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "clear": true,
        "close": true,
        "panel": "dedicated"
      },
      "detail": "install dependencies from package",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
